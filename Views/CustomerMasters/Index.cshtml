@model IEnumerable<CustomerDemoOne.Models.CustomerMaster>

@{
    ViewData["Title"] = "Index";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <div class="row">
            <div class="col-md-6">
                <h4 class="m-0 font-weight-bold text-primary">
                    All Customers(@ViewBag.totalModelCount)
                </h4>
            </div>
            <div class="col-md-6">
                <div style="float:right">
                    @Html.ActionLink("Create", "Create", new { }, htmlAttributes: new { @class = "btn btn-primary btn-sm" })
                </div>
            </div>

        </div>
    </div>
    <div class="card-body">
        <form class="row mb-3 g-3" asp-controller="CustomerMasters" asp-action="Index" method="get">

            <div class="col-lg-2 col-md-3 mb-md-0 mb-3">
                <input class="form-control" type="text" name="SearchString" value="@ViewData["searchname"]" placeholder="Find By Customer Name" />
            </div>

            <div class="col-lg-2 col-md-3 mb-md-0 mb-3">
                <input type="text" class="form-control" name="txtSearchEmail" value="@ViewBag.searchEmail" placeholder="Find by Email" />
            </div>

            <div class="col-lg-2 col-md-3 mb-md-0 mb-3">
                <input type="number" class="form-control" name="txtSearchmobileNo" value="@ViewBag.searchMobileNo" placeholder="Find by Mobile No." />
            </div>

            <div class="col-md-4">
                <input type="submit" value="Search" class="btn btn-dark" />

                <a class="ms-2 btn btn-info" asp-action="Index">Clear</a>
            </div>
        </form>

        <div>
            <partial name="_CustomerMastersPartial" />
        </div>
    </div>
</div>